@using ATI.Revenue.Web.PageModel.Products
@model ProductsViewModel
@{
    ViewBag.CurrentPageName = "Revenue.Products";
}

@section scripts
{
    <script src="~/view-resources/Areas/Revenue/Views/Products/Index.js" asp-append-version="true"></script>
}

<div class="content-container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h3>@L("Products")</h3>
                </div>
                <div class="col-6 text-end">
                    @if (IsGranted("Pages.Products.Create"))
                    {
                        <button id="CreateNewProductButton" class="btn btn-primary">
                            <i class="fa fa-plus"></i> @L("CreateProduct")
                        </button>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="ProductsTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@L("Name")</th>
                            <th>@L("Manufacturer")</th>
                            <th>@L("ModelNo")</th>
                            <th>@L("Category")</th>
                            <th>@L("Price")</th>
                            <th>@L("Active")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>