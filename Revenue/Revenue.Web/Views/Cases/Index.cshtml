@using ATI.Revenue.Web.PageModel.Cases
@model CasesViewModel
@{
    ViewBag.CurrentPageName = "Revenue.Cases";
}

@section scripts
{
    <script src="~/view-resources/Areas/Revenue/Views/Cases/Index.js" asp-append-version="true"></script>
}

<div class="content-container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h3>@L("Cases")</h3>
                </div>
                <div class="col-6 text-end">
                    @if (IsGranted("Pages.Cases.Create"))
                    {
                        <button id="CreateNewCaseButton" class="btn btn-primary">
                            <i class="fa fa-plus"></i> @L("CreateCase")
                        </button>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-12">
                    <div class="input-group">
                        <input type="text" id="CasesTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" />
                        <button id="GetCasesButton" class="btn btn-primary" type="button">@L("Search")</button>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table id="CasesTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@L("CaseNumber")</th>
                            <th>@L("ClientName")</th>
                            <th>@L("CaseDate")</th>
                            <th>@L("TotalAmount")</th>
                            <th>@L("Status")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>