@using System.Globalization
@using ATI.Pharmacy.Web.PageModel.Doctors
@using Abp.AspNetCore.Mvc.RazorPages
@using Abp.AspNetCore.Localization
@model DoctorExcelColumnSelectionViewModel
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/Core/Views/Common/Modals/_ModalHeader.cshtml", new PharmacyModalHeaderViewModel(L("ChooseColumnsForExcelExport")))

<div class="modal-body">
    <form>
        <div class="d-flex justify-content-between">
            <h2>@L("Columns")</h2>
            <button id="btnToggleAll" class="btn btn-primary btn-sm mb-5">@L("SelectAll")</button>
        </div>
        @for (var i = 0; i < Model.DoctorExcelColumns.Count; i++)
        {
            var doctorColumn = "doctorColumn" + i;
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="@Model.DoctorExcelColumns[i]" id="@doctorColumn">
                <label class="form-check-label" for="@doctorColumn">
                    @Model.DoctorExcelColumns[i]
                </label>
            </div>
        }
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-light-primary fw-bold close-button" data-bs-dismiss="modal">@L("Cancel")</button>
    <button type="button" class="btn btn-primary save-button"><i class="fa fa-save"></i> <span>@L("ExportExcel")</span></button>
</div>