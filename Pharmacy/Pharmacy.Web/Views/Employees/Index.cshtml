@using System.Globalization
@using ATI.Pharmacy.Web.PageModel.Prescriptions
@using Abp.AspNetCore.Mvc.RazorPages
@using Abp.AspNetCore.Localization
@using ATI.Authorization
@model PharmacyUserViewModel
@section Scripts
{
    <script abp-src="/view-resources/Areas/Pharmacy/Views/Employees/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title="Employee" description="">
    @if (IsGranted(AppPermissions.Pages_Employee_Create))
    {
        <button id="CreateNewUserButton" class="btn btn-primary">
            <i class="fa fa-plus btn-md-icon"></i>
            <span class="d-none d-md-inline-block">
                Create New Employee
            </span>
        </button>
    }
</abp-page-subheader>
<div class="@(await GetContainerClass())">
    <div class="card">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="PrescriptionStatus">Facility</label>
                            @Html.DropDownListFor(m => m.Facility,
                                     new SelectList(Model.Facility, "Value", "Text"),
                                     new
                                     {
                                         @class = "form-control",
                                         id = "CompanyList"
                                     })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="PrescriptionStatus">Role</label>
                            @Html.DropDownListFor(m => m.Role,
                                     new SelectList(Model.Role, "Value", "Text"),
                                     "Select Role",
                                     new
                                     {
                                         @class = "form-control",
                                         id = "RoleList"
                                     })
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="my-3">
                            <div class="input-group" style="margin-top:36px;">
                                <input type="text" id="UsersTableFilter" class="form-control" placeholder="Search..." value="">
                                <button id="GetUsersButton" class="btn btn-primary" type="submit">
                                    <i class="flaticon-search-1" aria-label="Search"></i>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="align-items-center">
                <table id="UsersTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable dtr-inline no-footer" width="100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Actions</th>
                            <th>User Name</th>
                            <th>First Name</th>
                            <th>Surname</th>
                            <th>Roles</th>
                            <th>Company</th>
                            <th>Email Address</th>
                            <th>Email Confirm</th>
                            <th>Active</th>
                            <th>Creation Time</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


