@using Abp.AspNetCore.Mvc.RazorPages
@using Abp.AspNetCore.Localization
@using System.Globalization

@model PatientExcelColumnSelectionViewModel
@using ATI.Pharmacy.Web.PageModel.Patients

@using Abp.Extensions
@* @await Html.PartialAsync("~/Areas/Pharmacy/Views/Common/Modals/_PharmacyModalHeader.cshtml") *@
<div class="modal-header">
    <h5 class="modal-title">
        <span>Export Patient Details</span>
    </h5>
    @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button> *@
</div>

<div class="modal-body">
    <form>
        <div class="d-flex justify-content-between">
            <h2>@L("Columns")</h2>
            <button id="btnToggleAll" class="btn btn-primary btn-sm mb-5">@L("SelectAll")</button>
        </div>
        @for (var i = 0; i < Model.PatientExcelColumns.Count; i++) { var patientColumn="patientColumn" + i; <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="@Model.PatientExcelColumns[i]" id="@patientColumn">
            <label class="form-check-label" for="@patientColumn">
                @Model.PatientExcelColumns[i]
            </label>
</div>
}
</form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-light-primary fw-bold close-button" data-bs-dismiss="modal">@L("Cancel")</button>
    <button type="button" class="btn btn-primary save-button"><i class="fa fa-save"></i> <span>@L("ExportExcel")</span></button>
</div>