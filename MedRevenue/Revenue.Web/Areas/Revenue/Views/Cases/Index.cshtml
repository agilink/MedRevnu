@model ATI.Revenue.Application.Cases.Dtos.GetAllCasesInput
@{
    ViewData["Title"] = "Cases";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Create New Case
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <input type="text" id="CaseNumberFilter" class="form-control" placeholder="Case Number..." />
                    </div>
                    <div class="col-md-3">
                        <input type="text" id="ClientNameFilter" class="form-control" placeholder="Client Name..." />
                    </div>
                    <div class="col-md-3">
                        <select id="StatusFilter" class="form-control">
                            <option value="">All Status</option>
                            <option value="Open">Open</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Closed">Closed</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button id="FilterButton" class="btn btn-info">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button id="ClearFilterButton" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
                
                <table id="CasesTable" class="table table-striped table-bordered data-table">
                    <thead>
                        <tr>
                            <th>Case Number</th>
                            <th>Client Name</th>
                            <th>Case Date</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th width="120">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var table = $('#CasesTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetAll")',
                    type: 'GET',
                    data: function (d) {
                        d.caseNumberFilter = $('#CaseNumberFilter').val();
                        d.clientNameFilter = $('#ClientNameFilter').val();
                        d.statusFilter = $('#StatusFilter').val();
                    }
                },
                columns: [
                    { data: 'caseNumber' },
                    { data: 'clientName' },
                    { 
                        data: 'caseDate',
                        render: function(data) {
                            return moment(data).format('MM/DD/YYYY');
                        }
                    },
                    { 
                        data: 'totalAmount',
                        render: function(data) {
                            return '$' + data.toFixed(2);
                        }
                    },
                    { 
                        data: 'status',
                        render: function(data) {
                            var badge = 'secondary';
                            if (data === 'Open') badge = 'success';
                            else if (data === 'In Progress') badge = 'warning';
                            else if (data === 'Closed') badge = 'danger';
                            return '<span class="badge bg-' + badge + '">' + data + '</span>';
                        }
                    },
                    {
                        data: 'id',
                        orderable: false,
                        render: function(data) {
                            return '<a href="/Revenue/Cases/Details/' + data + '" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a> ' +
                                   '<a href="/Revenue/Cases/Edit/' + data + '" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a> ' +
                                   '<button onclick="deleteCase(' + data + ')" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>';
                        }
                    }
                ]
            });

            $('#FilterButton').click(function() {
                table.draw();
            });

            $('#ClearFilterButton').click(function() {
                $('#CaseNumberFilter').val('');
                $('#ClientNameFilter').val('');
                $('#StatusFilter').val('');
                table.draw();
            });
        });

        function deleteCase(id) {
            if (confirm('Are you sure you want to delete this case?')) {
                $.ajax({
                    url: '/Revenue/Cases/Delete/' + id,
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function() {
                        $('#CasesTable').DataTable().draw();
                        RevenueModule.showSuccess('Case deleted successfully');
                    },
                    error: function() {
                        RevenueModule.showError('Failed to delete case');
                    }
                });
            }
        }
    </script>
}