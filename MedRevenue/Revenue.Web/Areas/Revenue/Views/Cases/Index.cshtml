@model ATI.Revenue.Application.Cases.Dtos.GetAllCasesInput
@{
    ViewData["Title"] = "Cases";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
                <div class="card-tools">
                    <button id="RefreshCasesButton" class="btn btn-default btn-sm">
                        <i class="fas fa-redo-alt"></i> @L("Refresh")
                    </button>
                    <button id="CreateNewCaseButton" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> @L("CreateNewCase")
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <input type="text" id="CaseNumberFilter" class="form-control" placeholder="Case Number..." />
                    </div>
                    <div class="col-md-3">
                        <input type="text" id="ClientNameFilter" class="form-control" placeholder="Client Name..." />
                    </div>
                    <div class="col-md-3">
                        <select id="StatusFilter" class="form-control">
                            <option value="">All Status</option>
                            <option value="Open">Open</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Closed">Closed</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button id="FilterButton" class="btn btn-info">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button id="ClearFilterButton" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
                
                <table id="CasesTable" class="table table-striped table-bordered data-table">
                    <thead>
                        <tr>
                            <th>Case Number</th>
                            <th>Client Name</th>
                            <th>Case Date</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th width="120">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/view-resources/Areas/Revenue/Views/Cases/Index.js" asp-append-version="true"></script>
}