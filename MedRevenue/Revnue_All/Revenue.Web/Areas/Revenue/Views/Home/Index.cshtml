@{
    ViewData["Title"] = "Revenue Module Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Revenue Module</h1>
    <p>Manage your revenue operations efficiently</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cases Management</h5>
                    <p class="card-text">Track and manage revenue cases</p>
                    <a asp-area="Revenue" asp-controller="Cases" asp-action="Index" class="btn btn-primary">View Cases</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Manage products and pricing</p>
                    <a asp-area="Revenue" asp-controller="Products" asp-action="Index" class="btn btn-primary">View Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Organize product categories</p>
                    <a asp-area="Revenue" asp-controller="ProductCategories" asp-action="Index" class="btn btn-primary">View Categories</a>
                </div>
            </div>
        </div>
    </div>
</div>