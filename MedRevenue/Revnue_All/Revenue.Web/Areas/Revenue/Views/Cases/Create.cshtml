@model ATI.Revenue.Application.Cases.Dtos.CreateOrEditCaseDto
@{
    ViewData["Title"] = "Create Case";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <form asp-action="Create" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CaseNumber" class="control-label"></label>
                                <input asp-for="CaseNumber" class="form-control" />
                                <span asp-validation-for="CaseNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ClientName" class="control-label"></label>
                                <input asp-for="ClientName" class="form-control" />
                                <span asp-validation-for="ClientName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CaseDate" class="control-label"></label>
                                <input asp-for="CaseDate" type="date" class="form-control" />
                                <span asp-validation-for="CaseDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" class="form-control">
                                    <option value="Open">Open</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Closed">Closed</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TotalAmount" class="control-label"></label>
                                <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Notes" class="control-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <!-- Case Products Section -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5>Products</h5>
                            <button type="button" class="btn btn-sm btn-success" onclick="addProduct()">
                                <i class="fas fa-plus"></i> Add Product
                            </button>
                        </div>
                        <div class="card-body">
                            <table id="ProductsTable" class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Discount</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="ProductsTableBody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var productIndex = 0;
        
        function addProduct() {
            var html = '<tr>' +
                '<td><select name="CaseProducts[' + productIndex + '].ProductId" class="form-control form-control-sm product-select"></select></td>' +
                '<td><input name="CaseProducts[' + productIndex + '].Quantity" type="number" class="form-control form-control-sm quantity" value="1" /></td>' +
                '<td><input name="CaseProducts[' + productIndex + '].UnitPrice" type="number" step="0.01" class="form-control form-control-sm unit-price" /></td>' +
                '<td><input name="CaseProducts[' + productIndex + '].Discount" type="number" step="0.01" class="form-control form-control-sm discount" value="0" /></td>' +
                '<td><input name="CaseProducts[' + productIndex + '].TotalPrice" type="number" step="0.01" class="form-control form-control-sm total" readonly /></td>' +
                '<td><button type="button" class="btn btn-sm btn-danger" onclick="removeProduct(this)"><i class="fas fa-trash"></i></button></td>' +
                '</tr>';
            
            $('#ProductsTableBody').append(html);
            loadProducts(productIndex);
            productIndex++;
        }
        
        function removeProduct(btn) {
            $(btn).closest('tr').remove();
            calculateTotal();
        }
        
        function loadProducts(index) {
            $.ajax({
                url: '/Revenue/Products/GetAllActive',
                type: 'GET',
                success: function(data) {
                    var select = $('select[name="CaseProducts[' + index + '].ProductId"]');
                    select.empty();
                    $.each(data.items, function(i, product) {
                        select.append('<option value="' + product.id + '" data-price="' + product.price + '">' + product.name + '</option>');
                    });
                    
                    // Set initial price
                    var selectedOption = select.find('option:selected');
                    var price = selectedOption.data('price');
                    select.closest('tr').find('.unit-price').val(price);
                    calculateRowTotal(select.closest('tr'));
                }
            });
        }
        
        $(document).on('change', '.product-select', function() {
            var selectedOption = $(this).find('option:selected');
            var price = selectedOption.data('price');
            $(this).closest('tr').find('.unit-price').val(price);
            calculateRowTotal($(this).closest('tr'));
        });
        
        $(document).on('input', '.quantity, .unit-price, .discount', function() {
            calculateRowTotal($(this).closest('tr'));
        });
        
        function calculateRowTotal(row) {
            var quantity = parseFloat(row.find('.quantity').val()) || 0;
            var unitPrice = parseFloat(row.find('.unit-price').val()) || 0;
            var discount = parseFloat(row.find('.discount').val()) || 0;
            var total = (quantity * unitPrice) - discount;
            row.find('.total').val(total.toFixed(2));
            calculateTotal();
        }
        
        function calculateTotal() {
            var total = 0;
            $('.total').each(function() {
                total += parseFloat($(this).val()) || 0;
            });
            $('#TotalAmount').val(total.toFixed(2));
        }
    </script>
}