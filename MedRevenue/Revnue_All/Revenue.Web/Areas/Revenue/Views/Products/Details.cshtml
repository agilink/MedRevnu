@model ATI.Revenue.Application.Products.Dtos.ProductDto
@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
                <div class="card-tools">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Manufacturer</dt>
                    <dd class="col-sm-9">@(Model.Manufacturer ?? "N/A")</dd>

                    <dt class="col-sm-3">Model Number</dt>
                    <dd class="col-sm-9">@(Model.ModelNo ?? "N/A")</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@(Model.ProductCategoryName ?? "N/A")</dd>

                    <dt class="col-sm-3">Cost</dt>
                    <dd class="col-sm-9">$@Model.Cost.ToString("N2")</dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">$@Model.Price.ToString("N2")</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>