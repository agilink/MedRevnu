@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Create New Product
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="ProductsTable" class="table table-striped table-bordered data-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Manufacturer</th>
                            <th>Model No</th>
                            <th>Category</th>
                            <th>Cost</th>
                            <th>Price</th>
                            <th>Active</th>
                            <th width="120">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var table = $('#ProductsTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetAll")',
                    type: 'GET'
                },
                columns: [
                    { data: 'name' },
                    { data: 'manufacturer' },
                    { data: 'modelNo' },
                    { data: 'productCategoryName' },
                    { 
                        data: 'cost',
                        render: function(data) {
                            return '$' + data.toFixed(2);
                        }
                    },
                    { 
                        data: 'price',
                        render: function(data) {
                            return '$' + data.toFixed(2);
                        }
                    },
                    { 
                        data: 'isActive',
                        render: function(data) {
                            return data ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-secondary">Inactive</span>';
                        }
                    },
                    {
                        data: 'id',
                        orderable: false,
                        render: function(data) {
                            return '<a href="/Revenue/Products/Details/' + data + '" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a> ' +
                                   '<a href="/Revenue/Products/Edit/' + data + '" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a> ' +
                                   '<button onclick="deleteProduct(' + data + ')" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>';
                        }
                    }
                ]
            });
        });

        function deleteProduct(id) {
            if (confirm('Are you sure you want to delete this product?')) {
                $.ajax({
                    url: '/Revenue/Products/Delete/' + id,
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function() {
                        $('#ProductsTable').DataTable().draw();
                        RevenueModule.showSuccess('Product deleted successfully');
                    },
                    error: function() {
                        RevenueModule.showError('Failed to delete product');
                    }
                });
            }
        }
    </script>
}