@using ATI.Web.Areas.Core.Models.Common.Modals
@await Html.PartialAsync("~/Areas/Core/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("LinkNewAccount")))

<div class="modal-body">
    <form name="LinkAccountModalForm" role="form" novalidate class="form-validation">
        <div class="mb-5">
            <label for="TenancyName" class="form-label">@L("TenancyName")</label>
            <input id="TenancyName" type="text" name="TenancyName" class="form-control" value="@(ViewBag.TenancyName ?? "")" maxlength="@ATI.MultiTenancy.Tenant.MaxTenancyNameLength">
        </div>

        <div class="mb-5">
            <label for="UsernameOrEmailAddress" class="form-label required">@L("UserName")</label>
            <input id="UsernameOrEmailAddress" class="form-control" type="text" name="UsernameOrEmailAddress" required maxlength="@ATI.Authorization.Users.User.MaxEmailAddressLength">
        </div>

        <div class="mb-5">
            <label for="Password" class="form-label required">@L("Password")</label>
            <input id="Password" type="password" name="Password"  autocomplete="new-password" class="form-control" required maxlength="@ATI.Authorization.Users.User.MaxPasswordLength">
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Areas/Core/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")