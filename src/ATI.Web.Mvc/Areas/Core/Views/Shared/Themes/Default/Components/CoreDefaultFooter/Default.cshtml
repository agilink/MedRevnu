@using ATI
@using ATI.Web.Areas.Core.Models.Layout
@model FooterViewModel
@{
    Layout = null;

    string layoutType = await GetLayoutType();
    string containerType = (layoutType == "fluid") ? "container-fluid" : "container-xxl";
}
<div class="footer py-4 d-flex flex-lg-column @(containerType)" id="kt_footer">
    <div class="@(await GetContainerClass()) d-flex flex-column flex-md-row align-items-center justify-content-between">
        <div class="text-dark order-2 order-md-1">
            <span class="text-muted fw-bold me-2">
                @Model.GetProductNameWithEdition() | v@(AppVersionHelper.Version) [@AppVersionHelper.ReleaseDate.ToString("yyyyMMdd")]
            </span>
        </div>
    </div>
</div>
