@using ATI
@using ATI.Web.Areas.Core.Models.Layout
@using ATI.Web.Areas.Core.Views.Shared.Components.CoreLogo
@model FooterViewModel
@{
    Layout = null;
}
<div class="footer py-4 d-flex flex-lg-column" id="kt_footer">
    <div class="@(await GetFooterContainerClass()) d-flex flex-column flex-md-row align-items-center justify-content-between">
        <div class="text-dark order-2 order-md-1">
            <div class="text-muted fw-bold me-2">
                @Model.GetProductNameWithEdition() | v@(AppVersionHelper.Version) [@AppVersionHelper.ReleaseDate.ToString("yyyyMMdd")]
            </div>
            <div class="nav nav-dark order-1 order-md-2">
            </div>
        </div>
    </div>
</div>

